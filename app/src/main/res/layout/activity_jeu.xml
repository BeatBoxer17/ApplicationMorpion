<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.admin.applicationmorpion.JeuActivity">

    <TextView
        android:id="@+id/joueur1"
        android:text="Test"
        android:layout_above="@+id/scoreX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/joueur2"
        android:text="Test"
        android:layout_above="@+id/scoreO"
        android:layout_alignRight="@+id/bt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/joueurX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/joueur1"
        android:layout_alignLeft="@id/bt1"
        android:text="Joueur X" />

    <TextView
        android:id="@+id/joueurO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/joueur2"
        android:layout_alignRight="@id/bt3"
        android:text="Joueur O"/>

    <TextView
        android:id="@+id/scoreX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/bt1"
        android:text="0"
        android:textSize="30dp"
        android:layout_above="@id/bt1"
        android:layout_marginBottom="25dp" />

    <TextView
        android:id="@+id/scoreO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_alignRight="@id/bt3"
        android:layout_above="@id/bt1"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button"
        android:layout_toRightOf="@+id/line1"/>

    <Button
        android:id="@+id/bt3"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button"
        android:layout_toRightOf="@+id/line2"/>

    <Button
        android:id="@+id/bt4"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button"
        android:layout_below="@+id/line3"/>

    <Button
        android:id="@+id/bt5"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button"
        android:layout_toRightOf="@+id/line1"
        android:layout_below="@+id/line3"/>

    <Button
        android:id="@+id/bt6"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button"
        android:layout_toRightOf="@+id/line2"
        android:layout_below="@+id/line3" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button"
        android:layout_below="@+id/line4"/>

    <Button
        android:id="@+id/bt8"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button"
        android:layout_toRightOf="@+id/line1"
        android:layout_below="@+id/line4"/>

    <Button
        android:id="@+id/bt9"
        android:layout_width="@dimen/size_button"
        android:layout_height="@dimen/size_button"
        android:layout_toRightOf="@+id/line2"
        android:layout_below="@+id/line4"/>

    <View
        android:id="@+id/line1"
        android:layout_width="@dimen/witdh_line"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/bt1"
        android:background="@android:color/black"
        android:layout_alignBottom="@+id/bt7"
        android:layout_alignTop="@+id/bt1"/>

    <View
        android:id="@+id/line2"
        android:layout_width="@dimen/witdh_line"
        android:layout_height="300dp"
        android:layout_toRightOf="@+id/bt2"
        android:background="@android:color/black"
        android:layout_alignBottom="@+id/bt7"
        android:layout_alignTop="@+id/bt1"/>

    <View
        android:id="@+id/line3"
        android:layout_width="0dp"
        android:layout_height="@dimen/witdh_line"
        android:layout_below="@+id/bt1"
        android:background="@android:color/black"
        android:layout_alignRight="@+id/bt3"
        android:layout_alignLeft="@+id/bt1"/>

    <View
        android:id="@+id/line4"
        android:layout_width="0dp"
        android:layout_height="@dimen/witdh_line"
        android:layout_below="@+id/bt4"
        android:background="@android:color/black"
        android:layout_alignRight="@+id/bt3"
        android:layout_alignLeft="@+id/bt1"/>

    <TextView
        android:id="@+id/auTourDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt7"
        android:layout_marginTop="@dimen/margin_tv"
        android:text="Au tour du joueur : "/>

    <TextView
        android:id="@+id/joueur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt7"
        android:layout_toRightOf="@id/auTourDe"
        android:layout_marginTop="@dimen/margin_tv"
        android:text="X"/>

    <Button
        android:id="@+id/btn_r_menu"
        android:text="@string/retour"
        android:layout_below="@+id/auTourDe"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
